<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout   android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.1">

            <TextView
                android:id="@+id/lblResource"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:text="@string/resource"/>


            <RadioGroup android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:checkedButton="@+id/rbResource">
                    <RadioButton android:id="@+id/rbResourceTransmisiones"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/transmisiones"
                        android:paddingRight="8dip"
                        android:onClick="onResourceRadioButtonClicked"/>
                    <RadioButton android:id="@+id/rbResourceConvencional"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/convencional"
                        android:paddingRight="8dip"
                        android:onClick="onResourceRadioButtonClicked"/>
                    <RadioButton android:id="@+id/rbResourceMedicalizada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/medicalizada"
                        android:paddingRight="8dip"
                        android:onClick="onResourceRadioButtonClicked"/>
            </RadioGroup>

            <TextView
                android:id="@+id/lblPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:visibility="gone"
                android:text="@string/place"/>

            <Spinner
                android:id="@+id/spinnerPlace"
                android:layout_width="fill_parent"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lblUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:visibility="gone"
                android:text="@string/userId"/>

            <EditText
                android:id="@+id/txtUserId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_medium"
                android:visibility="gone"
                android:inputType="text"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/padding_large"
            android:layout_weight="0.1">

            <Button
                android:id="@+id/register"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/regbutton"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fiesta"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/fiesta2"
                android:adjustViewBounds="true"
                android:contentDescription="@string/muyGrave"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView><!-- From: file:/G:/PAULA/UNED/UNED%202013-2014/PFC/EncierroDYAProject/EncierroDYA/src/main/res/layout/register.xml -->