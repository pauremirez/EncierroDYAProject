<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgTest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/test"
            android:contentDescription="@string/test"/>


        <TextView
            android:id="@+id/txtGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="@string/selectOld"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/padding_large">





            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/btnMinus30"
                android:background="@drawable/btnmenos30"
                android:layout_weight="1"
                android:contentDescription="@string/urgencia"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgFemale30"
                android:layout_gravity="center"
                android:background="@drawable/joven"
                android:layout_weight="1"
                android:contentDescription="@string/urgencia"/>


    </LinearLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_large">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgMale3050"
                    android:layout_gravity="center"
                    android:background="@drawable/adulto"
                    android:layout_weight="1"
                    android:contentDescription="@string/urgencia"/>

                <ImageButton
                    android:id="@+id/btn3050"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btn3050"
                    android:layout_weight="1"
                    android:contentDescription="@string/urgencia"/>


            </LinearLayout>




            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/padding_large">




                <ImageButton
                    android:id="@+id/btnPlus50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/btnmas50"
                    android:layout_weight="1"
                    android:contentDescription="@string/urgencia"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgFemale50"
                    android:layout_gravity="center"
                    android:background="@drawable/anciano"
                    android:layout_weight="1"
                    android:contentDescription="@string/urgencia"/>

            </LinearLayout>

    </LinearLayout>
